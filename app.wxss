/* 引入字体图标 不能采用当行注释，会报错，只能使用多行注释 */
@import './styles/iconfont';

/* 在微信小程序中不支持通配符 ‘ * ’ */
page, view, swiper, swiper-item, image, navigator {
  padding: 0;
  margin: 0;
/*   此处需要注意，盒子尺寸设置为盒子的宽高包含边框border */  
box-sizing: border-box;
}

/* 
主题颜色 通过变量来实现
1 less中存在变量这个知识
2 原生的css和wxss也支持变量
*/
page {
  /* 定义主题颜色 */
  --themeColor: #eb4450;
  /* 
  定义统一字体大小  假设设计稿 大小是 375rpx
  1px = 2rpx
  14px = 28rpx
  */
  font-size: 28rpx;
}

image {
  width: 100%;
}